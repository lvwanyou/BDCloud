function getStatistics(){
			var startDate=document.getElementById("startDate").value;
			var endDate=document.getElementById("endDate").value;
		//	alert(startDate);
			$.ajax({
				type : "POST",
				url : "<%=basePath%>getStatistics.php",
				data : {
					"startTime":startDate,
					"endTime":endDate
					
				},
				dataType : "json",
				async: true,
				success : function(data) {
					//alert("成功进入了");
					typelist=data.types;
					var datalist_type=[];
					$.each(typelist,function(i,item){
						//alert(item.type+"++++"+item.count);
						if(item.type!="")
						datalist_type.push({value:item.count, name:item.type+":"+((item.count/data.total_type)*100).toFixed(2)+"%"});
						/*测试说不可能为空不显示 else
							datalist_type.push({value:item.count, name:'其他'+":"+((item.count/data.total_type)*100).toFixed(2)+"%"}); */
					})
					//////////////////案件类型图数据绑定///////////////////////////////
					// 基于准备好的dom，初始化echarts实例
					var dom = document.getElementById('yuan');
			      	var myChart = echarts.init(dom);
			         
			        option = {
			        		toolbox: {  
	                	         //show: true,  
	                	         itemSize: 20,  
	                	         itemGap: 30,  
	                	         right: 50,  
	                	         feature: {  
	                	             /* dataView: {show:true}, */  
	                	             saveAsImage: { 
	                	            	 name:"案件类型图",
	                	                 //excludeComponents :['toolbox'],  
	                	                 pixelRatio: 2  
	                	             }  
	                	         }  
	                	}, 
			        	    series : [
			        	        {
			        	            name: '访问来源',
			        	            type: 'pie',
			        	            radius: '55%',
			        	            roseType: 'angle',
			        	            data:datalist_type
			        	        }
			        	    ]
			        	};

			        // 使用刚指定的配置项和数据显示图表。
			        myChart.setOption(option);
			        
	//////////////////案件类型图数据绑定——end//////////////////////////
					///////////////////案件趋势图数据绑定////////////////////////////
			        var month=["1月","2月","3月","4月","5月","6月","7月","8月","9月","10月","11月","12月"];
					var datalist=[];
					var max=0;//用于动态控制柱状图的最大案件数
					max=data.jan;
					
					if(max/1<data.feb/1){
						max=data.feb;
						//alert(2);
					}
					if(max/1<data.mar/1){
						max=data.mar;
						//alert(3);
					}
					if(max/1<data.apr/1){
						max=data.apr;
						//alert(4);
					}
					if(max/1<data.may/1){
						max=data.may;
						//alert(5);
					}
					if(max/1<data.jun/1){
						max=data.jun;
						//alert(6);
					}
					if(max/1<data.jul/1){
						max=data.jul;
						//alert(7);
					}
					if(max/1<data.aug/1){
						max=data.aug;
						
						//alert(8);
						//alert(max);
						//alert(max/1<data.sep/1);
					}
					if(max/1<data.sep/1){
						max=data.sep;
						//alert(9);
					}
					if(max/1<data.oct/1){
						max=data.oct;
						//alert(10);
					}
					if(max/1<data.nov/1){
						max=data.nov;
						//alert(11);
					}
					if(max/1<data.dec/1){
						max=data.dec;
						//alert(12);
					}
					
					//max/1将max转换为数字类型，javascipt在这将max当作了字符类型
					max=(10-max%10)+max/1+10;
					//数据绑定，每个月的新增案件数
					datalist.push(data.jan);datalist.push(data.feb);datalist.push(data.mar);
					datalist.push(data.apr);datalist.push(data.may);datalist.push(data.jun);
					datalist.push(data.jul);datalist.push(data.aug);datalist.push(data.sep);
					datalist.push(data.oct);datalist.push(data.nov);datalist.push(data.dec);
					 // 基于准备好的dom，初始化echarts图表
	                var myChart2 = echarts.init(document.getElementById('list')); 
	                var option = {
	                		
	                		
	                		 title : {
	                			 
	                		        //text: '本年度案收结趋势图',
	                		        //fontStyle:'italic'
	                		        //subtext: '纯属虚构'
	                		    },
	                		    
	                    tooltip: {
	                        show: true
	                    },
	                    legend: {
	                    	//itemGap:0,
	                        data:['单位/件'],
	                        x:'680px',
	                     y:'40px'
	                    },                 
	                    xAxis : [
	                        {
	                            type : 'category',
	                            data :month 
	                        }
	                    ],
	                    yAxis:
	                    	[
	                    {
	                        type: 'value',
	                        //splitNumber:1,
	                        splitNumber: 10,
	                        min: 0,
	                        max: max
	                    }],
	                    toolbox: {  
	                        //show: true,  
	                        itemSize: 20,  
	                        itemGap: 30,  
	                        right: 50,  
	                        feature: {  
	                            // dataView: {show:true},   
	                            saveAsImage: { 
	                           	 name:"案件趋势图",
	                                //excludeComponents :['toolbox'],  
	                                pixelRatio: 2  
	                            }  
	                        }  
	               }, 
	                    series : [
	                              
	                        {
	                        	type:'bar',
	                            "name":"新增案件数",
	                            "type":"bar",
	                            "barGap":"5",
	                            itemStyle: {normal: {color:'#6CE0C7'
	            					}},
	                            "data":datalist
	                        },
	                    ],
	                   
	                };
	       
	                // 为echarts对象加载数据 
	                myChart2.setOption(option); 
	///////////////////案件趋势图数据绑定——end///////////////////////
					
				},
				error: function(XMLHttpRequest, textStatus, errorThrown) {
					//alert("失败");
				}
			});
		}
//回车搜索事件  上面的时间框
function onKeyDown_time(event){
   var e = event || window.event || arguments.callee.caller.arguments[0];
   if(e && e.keyCode==13){ // enter 键
	   getStatistics();
   }
}

//回车搜索事件  下面的时间框
function onKeyDown(event){
   var e = event || window.event || arguments.callee.caller.arguments[0];
   if(e && e.keyCode==13){ // enter 键
	   showCase(1);
   }
}
